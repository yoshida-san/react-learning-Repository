{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": ["react", "jest", "plugin-proposal-class-properties"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "env": {
    "jest/globals": true,
    "es6": true,
    "node": true
  },
  "globals": {},
  "rules": {
    "semi": ["error", "never"]
  }
}
